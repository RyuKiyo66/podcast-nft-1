{
  "name": "hardhat-project",
  "scripts": {
    "deploy-local": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy-rinkeby": "npx hardhat run scripts/deploy.js --network rinkeby",
    "verify-rinkeby": "npx hardhat verify --constructor-args arguments.js --network rinkeby",
    "test": "yarn run hardhat test",
    "lint:sol": "yarn solhint --fix --max-warnings 0 \"contracts/**/*.sol\""
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@nomiclabs/hardhat-etherscan": "^3.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.2",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^16.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.4",
    "hardhat": "^2.8.3",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.5.0"
  }
}
